<div class="container-fluid">
	<div class="jumbotron">
		<h2 class="app-shade">Url Shortner app</h2>

		<%= form_tag get_url_path, method: :post do %>
			<div class="form-group row">
				<div class="col-sm-9 no-right-padding">
					<%= text_field_tag :long_url, params[:long_url], autofocus: true, placeholder: "Enter your url here...", class: "form-control form-control-lg" %>
				</div>
				<div class="col-sm-3 no-left-padding">
					<%= button_tag type: :submit, class:"btn btn-success" do %>
						Submit
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
